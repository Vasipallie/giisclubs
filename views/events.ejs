<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Club Events | GIIS Clubs</title>
    <link rel="icon" type="image/png" href="resources/1.png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --ink: #0f172a;
            --muted: #64748b;
            --surface: #ffffff;
            --surface-soft: #f8fafc;
            --border: #e2e8f0;
            --sidebar-width: 260px;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            color: var(--ink);
            background-color: var(--surface-soft);
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: var(--sidebar-width);
            background: var(--surface);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 24px;
            border-bottom: 1px solid var(--border);
        }

        .sidebar-logo {
            height: 48px;
            width: auto;
        }

        .sidebar-nav {
            flex: 1;
            padding: 16px 0;
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: 8px;
        }

        .nav-section-title {
            padding: 8px 24px;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: var(--muted);
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 24px;
            color: var(--ink);
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            border-left: 3px solid transparent;
        }

        .nav-link:hover {
            background: var(--surface-soft);
            color: var(--primary);
        }

        .nav-link.active {
            background: rgba(37, 99, 235, 0.08);
            color: var(--primary);
            border-left-color: var(--primary);
            font-weight: 600;
        }

        .nav-icon {
            width: 20px;
            height: 20px;
            stroke: currentColor;
            stroke-width: 2;
            fill: none;
        }

        .sidebar-footer {
            padding: 16px 24px;
            border-top: 1px solid var(--border);
        }

        .club-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .club-avatar {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 16px;
        }

        .club-avatar-img {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            object-fit: cover;
        }

        .club-details {
            flex: 1;
            min-width: 0;
        }

        .club-name {
            font-size: 14px;
            font-weight: 600;
            color: var(--ink);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .club-status {
            font-size: 12px;
            color: var(--muted);
        }

        .logout-btn {
            width: 100%;
            padding: 10px 0;
            background: var(--primary);
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 8px;
            transition: background 0.2s;
        }
        .logout-btn:hover {
            background: var(--primary-dark);
        }

        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            min-height: 100vh;
        }

        .content-area {
            padding: 32px;
            max-width: 1200px;
        }

        /* Mobile Toggle */
        .mobile-toggle {
            display: none;
            position: fixed;
            top: 16px;
            left: 16px;
            z-index: 1001;
            width: 44px;
            height: 44px;
            border-radius: 10px;
            background: var(--surface);
            border: 1px solid var(--border);
            cursor: pointer;
            align-items: center;
            justify-content: center;
        }

        .mobile-toggle svg {
            width: 24px;
            height: 24px;
            stroke: var(--ink);
            stroke-width: 2;
            fill: none;
        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.open {
                transform: translateX(0);
            }

            .sidebar-overlay.open {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }

            .mobile-toggle {
                display: flex;
            }

            .content-area {
                padding: 24px 16px;
                padding-top: 72px;
            }
        }

        /* Events Page Styles */
        .events-container {
            max-width: 900px;
            margin: 0 auto;
        }
        .event-bar {
            display: flex;
            align-items: center;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.06);
            margin-bottom: 24px;
            padding: 24px;
            gap: 32px;
            transition: box-shadow 0.2s;
        }
        .event-bar:hover {
            box-shadow: 0 4px 24px rgba(37,99,235,0.10);
        }
        .club-logo {
            width: 64px;
            height: 64px;
            border-radius: 12px;
            object-fit: cover;
            background: #e2e8f0;
        }
        .event-details {
            flex: 1;
        }
        .event-club-name {
            font-size: 18px;
            font-weight: 700;
            color: #2563eb;
            margin-bottom: 6px;
        }
        .event-desc {
            font-size: 15px;
            color: #334155;
            margin-bottom: 8px;
        }
        .event-date {
            font-size: 14px;
            color: #64748b;
            font-weight: 500;
        }
        .no-events {
            text-align: center;
            color: #64748b;
            font-size: 18px;
            margin-top: 60px;
        }
    </style>
</head>
<body>
    <!-- Mobile Toggle -->
    <button class="mobile-toggle" onclick="toggleSidebar()">
        <svg viewBox="0 0 24 24"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
    </button>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <a href="/">
                <img src="resources/2.png" alt="GIIS Clubs" class="sidebar-logo">
            </a>
        </div>

        <nav class="sidebar-nav">
            <div class="nav-section">
                <div class="nav-section-title">Main</div>
                <a href="/home" class="nav-link">
                    <svg class="nav-icon" viewBox="0 0 24 24"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
                    Dashboard
                </a>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Events</div>
                <a href="/events" class="nav-link active">
                    <svg class="nav-icon" viewBox="0 0 24 24"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                    All Club Events
                </a>
                <a href="/add-event" class="nav-link">
                    <svg class="nav-icon" viewBox="0 0 24 24"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                    Create Event
                </a>
                <a href="/manage-events" class="nav-link">
                    <svg class="nav-icon" viewBox="0 0 24 24"><path d="M9 11l3 3L22 4"/><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/></svg>
                    Manage My Events
                </a>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Tools</div>
                <a href="/shorten" class="nav-link">
                    <svg class="nav-icon" viewBox="0 0 24 24"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
                    URL Shortener
                </a>
                <a href="/qrgen" class="nav-link">
                    <svg class="nav-icon" viewBox="0 0 24 24"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></svg>
                    QR Generator
                </a>
                <a href="/linklist-manager" class="nav-link">
                    <svg class="nav-icon" viewBox="0 0 24 24"><line x1="8" y1="6" x2="21" y2="6"/><line x1="8" y1="12" x2="21" y2="12"/><line x1="8" y1="18" x2="21" y2="18"/><line x1="3" y1="6" x2="3.01" y2="6"/><line x1="3" y1="12" x2="3.01" y2="12"/><line x1="3" y1="18" x2="3.01" y2="18"/></svg>
                    Linklist Manager
                </a>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Settings</div>
                <a href="/manage-club" class="nav-link">
                    <svg class="nav-icon" viewBox="0 0 24 24"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
                    Manage Club
                </a>
                <% if (isAdmin) { %>
                <a href="/admin-dashboard" class="nav-link">
                    <svg class="nav-icon" viewBox="0 0 24 24"><path d="M12 2L2 7l10 5 10-5-10-5z"/><polyline points="2 17 12 22 22 17"/><polyline points="2 12 12 17 22 12"/></svg>
                    Admin Dashboard
                </a>
                <% } %>
            </div>
        </nav>

        <div class="sidebar-footer">
            <div class="club-info">
                <% if (clubLogo) { %>
                    <img src="<%= clubLogo %>" alt="Club Logo" class="club-avatar-img">
                <% } else { %>
                    <div class="club-avatar"><%= clubName ? clubName.charAt(0).toUpperCase() : 'C' %></div>
                <% } %>
                <div class="club-details">
                    <div class="club-name"><%= clubName || 'Your Club' %></div>
                    <div class="club-status">@ PG SMART CAMPUS</div>
                </div>
            </div>
            <form action="/logout" method="POST" style="margin-top: 18px;">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-area">
            <div class="events-container">
        <h1 style="text-align:center; margin-bottom:32px; font-size:2rem; color:#2563eb;">Upcoming Club Events</h1>
        <% if (events && events.length > 0) { %>
            <% events.forEach(event => { %>
                <% 
                    const eventDate = new Date(event.date);
                    const day = String(eventDate.getDate()).padStart(2, '0');
                    const month = String(eventDate.getMonth() + 1).padStart(2, '0');
                    const year = eventDate.getFullYear();
                    const formattedDate = `${day}/${month}/${year}`;
                %>
                <div class="event-bar">
                    <img src="<%= event.clubLogo %>" alt="<%= event.clubName %> Logo" class="club-logo">
                    <div class="event-details">
                        <div class="event-club-name"><%= event.clubName %></div>
                        <div class="event-desc"><%= event.event_name %></div>
                        <% if (event.description && event.description !== event.event_name) { %>
                            <div style="font-size: 0.85rem; color: #666; margin-top: 4px;"><%= event.description %></div>
                        <% } %>
                        <div class="event-date">Date: <%= formattedDate %></div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="no-events">No events found. Check back soon!</div>
        <% } %>
    </div>
        </div>
    </main>

    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
            document.querySelector('.sidebar-overlay').classList.toggle('open');
        }
    </script>
</body>
</html>
