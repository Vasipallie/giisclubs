    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
            document.querySelector('.sidebar-overlay').classList.toggle('open');
        }

        function formatDateDDMMYYYY(dateString) {
            const date = new Date(dateString);
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year = date.getFullYear();
            return `${day}/${month}/${year}`;
        }

        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.style.display = 'none';
            });

            // Remove active class from all nav links
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(sectionId + '-section').style.display = 'block';
            
            // Add active class to clicked link
            event.currentTarget.classList.add('active');
        }

        // Create User Form Handler
        document.getElementById('signupForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const clubName = document.getElementById('clubName').value.trim();
            const description = document.getElementById('description').value.trim();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            // Validate club fields
            if (!clubName) {
                showError('Club name is required');
                return;
            }

            if (!description) {
                showError('Club description is required');
                return;
            }

            // Validate password requirements
            if (password.length < 8) {
                showError('Password must be at least 8 characters long');
                return;
            }

            if (!/[A-Z]/.test(password)) {
                showError('Password must contain at least one uppercase letter');
                return;
            }

            if (!/[0-9]/.test(password)) {
                showError('Password must contain at least one number');
                return;
            }

            if (password !== confirmPassword) {
                showError('Passwords do not match');
                return;
            }

            const loading = document.getElementById('loading');
            loading.classList.add('show');

            try {
                const response = await fetch('/signup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email, password, clubName, description, isAdmin: false })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to create account');
                }

                showSuccess('Account created successfully!');
                document.getElementById('signupForm').reset();
                loadUsers(); // Refresh users list
            } catch (error) {
                console.error('Error:', error);
                showError(error.message);
            } finally {
                loading.classList.remove('show');
            }
        });

        function showError(message) {
            const errorDiv = document.createElement('div');
            errorDiv.className = 'error-message';
            errorDiv.textContent = message;
            const form = document.getElementById('signupForm');
            form.parentElement.insertBefore(errorDiv, form);
            setTimeout(() => {
                errorDiv.remove();
            }, 5000);
        }

        function showSuccess(message) {
            const successDiv = document.createElement('div');
            successDiv.className = 'success-message';
            successDiv.textContent = message;
            const form = document.getElementById('signupForm');
            form.parentElement.insertBefore(successDiv, form);
            setTimeout(() => {
                successDiv.remove();
            }, 5000);
        }

        // Load Users
        async function loadUsers() {
            const usersList = document.getElementById('users-list');
            
            try {
                const response = await fetch('/admin/users');
                
                if (!response.ok) {
                    const errorData = await response.json();
                    console.error('Error response:', errorData);
                    usersList.innerHTML = `<div class="empty-state">Failed to load users: ${errorData.error || 'Unknown error'}</div>`;
                    return;
                }
                
                const users = await response.json();
                console.log('Loaded users:', users);
                
                if (users && users.length > 0) {
                    usersList.innerHTML = users.map(user => `
                        <div class="data-item" data-user-id="${user.id}">
                            <div class="data-item-header">
                                <div class="data-item-title">${user.name || 'Unknown'}</div>
                            </div>
                            <div class="data-item-content">
                                <strong>Description:</strong> ${user.description || 'N/A'}<br>
                                <strong>ID:</strong> ${user.id}<br>
                                <strong>Admin:</strong> ${user.is_admin ? 'Yes' : 'No'}
                            </div>
                            <div style="display: flex; gap: 8px; margin-top: 12px;">
                                <button onclick="editUser('${user.id}', '${user.name}', '${user.description || ''}')" style="flex: 1; padding: 8px; background: var(--primary); color: white; border: none; border-radius: 6px; cursor: pointer; font-size: 13px; font-weight: 600;">Edit</button>
                                <button onclick="resetPassword('${user.id}', '${user.name}')" style="flex: 1; padding: 8px; background: #f59e0b; color: white; border: none; border-radius: 6px; cursor: pointer; font-size: 13px; font-weight: 600;">Reset Password</button>
                                <button onclick="deleteUser('${user.id}', '${user.name}')" style="flex: 1; padding: 8px; background: #dc2626; color: white; border: none; border-radius: 6px; cursor: pointer; font-size: 13px; font-weight: 600;">Delete</button>
                            </div>
                        </div>
                    `).join('');
                } else {
                    usersList.innerHTML = '<div class="empty-state">No users found</div>';
                }
            } catch (error) {
                console.error('Error loading users:', error);
                usersList.innerHTML = '<div class="empty-state">Failed to load users: ' + error.message + '</div>';
            }
        }

        // Edit User Function
        async function editUser(id, name, description) {
            const newName = prompt('Enter new club name:', name);
            if (newName === null) return;
            
            const newDescription = prompt('Enter new description:', description);
            if (newDescription === null) return;
            
            try {
                const response = await fetch(`/admin/users/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        name: newName,
                        description: newDescription
                    })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert('User updated successfully!');
                    loadUsers();
                } else {
                    alert(result.error || 'Failed to update user');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        // Reset Password Function
        async function resetPassword(id, name) {
            const newPassword = prompt(`Enter new password for "${name}" (min 8 characters):`);
            if (!newPassword) return;
            
            if (newPassword.length < 8) {
                alert('Password must be at least 8 characters long');
                return;
            }
            
            if (!confirm(`Reset password for "${name}"?`)) {
                return;
            }
            
            try {
                const response = await fetch(`/admin/users/${id}/reset-password`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ newPassword })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert('Password reset successfully!');
                } else {
                    alert(result.error || 'Failed to reset password');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        // Delete User Function
        async function deleteUser(id, name) {
            if (!confirm(`Are you sure you want to delete user "${name}"? This action cannot be undone.`)) {
                return;
            }
            
            try {
                const response = await fetch(`/admin/users/${id}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert('User deleted successfully!');
                    loadUsers();
                } else {
                    alert(result.error || 'Failed to delete user');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        // Load data on page load
        loadUsers();

        // Load Events
        async function loadEvents() {
            const eventsList = document.getElementById('events-list');
            
            try {
                const response = await fetch('/admin/events');
                
                if (!response.ok) {
                    const errorData = await response.json();
                    console.error('Error response:', errorData);
                    eventsList.innerHTML = `<div class="empty-state">Failed to load events: ${errorData.error || 'Unknown error'}</div>`;
                    return;
                }
                
                const events = await response.json();
                console.log('Loaded events:', events);
                if (events.length > 0) {
                    console.log('Sample event:', events[0]);
                    console.log('Has proposal_link:', 'proposal_link' in events[0]);
                }
                
                if (events && events.length > 0) {
                    eventsList.innerHTML = events.map(event => `
                        <div class="data-item" data-event-id="${event.id}">
                            <div class="data-item-header">
                                <div class="data-item-title">${event.event_name || event.description}</div>
                                <div class="data-item-meta">${formatDateDDMMYYYY(event.date)}</div>
                            </div>
                            <div class="data-item-content">
                                <strong>Club:</strong> ${event.club}<br>
                                <strong>Description:</strong> ${event.description}<br>
                                <strong>Target Grades:</strong> ${event.target_grades || 'N/A'}<br>
                                <strong>Date:</strong> ${formatDateDDMMYYYY(event.date)}<br>
                                <strong>Status:</strong> ${event.approved ? 'Approved' : 'Pending Approval'}<br>
                                <strong>Proposal:</strong> ${event.proposal_link ? `<a href="${event.proposal_link}" target="_blank" style="color: #2563eb; text-decoration: none;">View Document →</a>` : '<span style="color: #f59e0b;">⚠ Not submitted</span>'}
                                ${event.approved ? `<br><strong>Budget:</strong> ${event.budget_submitted ? 'Submitted' : 'Not yet submitted'}<br><strong>Receipts:</strong> ${event.receipts_submitted ? 'Submitted' : 'Not yet submitted'}` : ''}
                            </div>
                            ${!event.approved ? `
                            <div style="display: flex; gap: 8px; margin-top: 12px;">
                                <button onclick="approveEvent('${event.id}', '${(event.event_name || event.description).replace(/'/g, "\\'")}'" style="flex: 1; padding: 8px; background: #16a34a; color: white; border: none; border-radius: 6px; cursor: pointer; font-size: 13px; font-weight: 600;">Approve</button>
                                <button onclick="rejectEvent('${event.id}', '${(event.event_name || event.description).replace(/'/g, "\\'")}'" style="flex: 1; padding: 8px; background: #dc2626; color: white; border: none; border-radius: 6px; cursor: pointer; font-size: 13px; font-weight: 600;">Reject</button>
                            </div>
                            ` : ''}
                        </div>
                    `).join('');
                } else {
                    eventsList.innerHTML = '<div class="empty-state">No pending events</div>';
                }
            } catch (error) {
                console.error('Error loading events:', error);
                eventsList.innerHTML = '<div class="empty-state">Failed to load events: ' + error.message + '</div>';
            }
        }

        // Approve Event Function
        async function approveEvent(id, description) {
            if (!confirm(`Approve event "${description}"?`)) {
                return;
            }
            
            try {
                const response = await fetch(`/admin/events/${id}/approve`, {
                    method: 'PUT'
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert('Event approved successfully!');
                    loadEvents();
                } else {
                    alert(result.error || 'Failed to approve event');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        // Reject Event Function
        async function rejectEvent(id, description) {
            if (!confirm(`Reject and delete event "${description}"?`)) {
                return;
            }
            
            try {
                const response = await fetch(`/admin/events/${id}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert('Event rejected successfully!');
                    loadEvents();
                } else {
                    alert(result.error || 'Failed to reject event');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        // Load Manage Events
        async function loadManageEvents() {
            const manageEventsList = document.getElementById('manage-events-list');
            
            try {
                const response = await fetch('/admin/events/documents');
                
                if (!response.ok) {
                    const errorData = await response.json();
                    console.error('Error response:', errorData);
                    manageEventsList.innerHTML = `<div class="empty-state">Failed to load events: ${errorData.error || 'Unknown error'}</div>`;
                    return;
                }
                
                const events = await response.json();
                console.log('Loaded events with documents:', events);
                
                if (events && events.length > 0) {
                    manageEventsList.innerHTML = `
                        <table style="width: 100%; border-collapse: collapse; background: white; border-radius: 8px; overflow: hidden;">
                            <thead style="background: #f8fafc; border-bottom: 2px solid #e2e8f0;">
                                <tr>
                                    <th style="padding: 12px; text-align: left; font-size: 13px; font-weight: 700; color: #2563eb;">Club</th>
                                    <th style="padding: 12px; text-align: left; font-size: 13px; font-weight: 700; color: #2563eb;">Event</th>
                                    <th style="padding: 12px; text-align: left; font-size: 13px; font-weight: 700; color: #2563eb;">Event sDate</th>
                                    <th style="padding: 12px; text-align: left; font-size: 13px; font-weight: 700; color: #2563eb;">Status</th>
                                    <th style="padding: 12px; text-align: left; font-size: 13px; font-weight: 700; color: #2563eb;">Proposal</th>
                                    <th style="padding: 12px; text-align: left; font-size: 13px; font-weight: 700; color: #2563eb;">Budget</th>
                                    <th style="padding: 12px; text-align: left; font-size: 13px; font-weight: 700; color: #2563eb;">Receipts</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${events.map(event => `
                                    <tr style="border-bottom: 1px solid #e2e8f0;">
                                        <td style="padding: 12px; font-size: 14px; color: #334155;">${event.club}</td>
                                        <td style="padding: 12px; font-size: 14px; color: #334155; max-width: 200px;">${event.event_name || event.description}</td>
                                        <td style="padding: 12px; font-size: 14px; color: #334155;">${formatDateDDMMYYYY(event.date)}</td>
                                        <td style="padding: 12px;">
                                            <span style="padding: 4px 10px; border-radius: 12px; font-size: 12px; font-weight: 600; ${event.approved ? 'background: #d1fae5; color: #065f46;' : 'background: #fef3c7; color: #92400e;'}">
                                                ${event.approved ? 'Approved' : 'Pending'}
                                            </span>
                                        </td>
                                        <td style="padding: 12px;">
                                            ${event.proposal_link ? `<a href="${event.proposal_link}" target="_blank" style="color: #2563eb; text-decoration: none; font-size: 13px; font-weight: 600;">View →</a>` : '<span style="color: #94a3b8; font-size: 13px;">-</span>'}
                                        </td>
                                        <td style="padding: 12px;">
                                            ${event.budget_files && event.budget_files.length > 0 ? 
                                                event.budget_files.map((file, idx) => `<a href="${file.url}" target="_blank" style="display: inline-block; background: #2563eb; color: white; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 12px; font-weight: 600; margin-right: 6px; margin-bottom: 4px;">${file.name}</a>`).join('') 
                                                : '<span style="color: #94a3b8; font-size: 13px;">-</span>'}
                                        </td>
                                        <td style="padding: 12px;">
                                            ${event.receipt_files && event.receipt_files.length > 0 ? 
                                                event.receipt_files.map((file, idx) => `<a href="${file.url}" target="_blank" style="display: inline-block; background: #10b981; color: white; padding: 6px 12px; border-radius: 6px; text-decoration: none; font-size: 12px; font-weight: 600; margin-right: 6px; margin-bottom: 4px;">${file.name}</a>`).join('') 
                                                : '<span style="color: #94a3b8; font-size: 13px;">-</span>'}
                                        </td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    `;
                } else {
                    manageEventsList.innerHTML = '<div class="empty-state">No events found</div>';
                }
            } catch (error) {
                console.error('Error loading events:', error);
                manageEventsList.innerHTML = '<div class="empty-state">Failed to load events: ' + error.message + '</div>';
            }
        }

        // Load events when approve-events section is shown
        const originalShowSection = showSection;
        showSection = function(sectionId) {
            originalShowSection.call(this, sectionId);
            if (sectionId === 'approve-events') {
                loadEvents();
            } else if (sectionId === 'manage-events') {
                loadManageEvents();
            }
        };
    </script>
</body>
