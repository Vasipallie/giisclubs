        <div class="content-area">
            <!-- Create User Section -->
            <div id="create-user-section" class="content-section">
                <h2 class="section-title">Create New User</h2>
                <div class="cards-grid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">User Details</h3>
                            <p class="card-subtitle">Create a new club account with credentials</p>
                        </div>
                        <form id="signupForm">
                            <div class="form-group">
                                <label for="clubName">Club Name *</label>
                                <input type="text" id="clubName" name="clubName" placeholder="Enter your club name" required>
                            </div>

