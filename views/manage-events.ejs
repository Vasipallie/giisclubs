    <script>
        function formatDateDDMMYYYY(dateString) {
            const date = new Date(dateString);
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year = date.getFullYear();
            return `${day}/${month}/${year}`;
        }

        async function loadEvents() {
            const container = document.getElementById('events-container');
            
            try {
                const response = await fetch('/api/my-events');
                const events = await response.json();

                if (events.length === 0) {
                    container.innerHTML = `
                        <div style="grid-column: 1 / -1;">
                            <div class="empty-state">
                                <div class="empty-state-icon">ðŸ“‹</div>
                                <div class="empty-state-title">No events yet</div>
                                <div class="empty-state-text">Create an event to get started</div>
                            </div>
                        </div>
                    `;
                    return;
                }

                container.innerHTML = events.map(event => `
                    <div class="event-card">
                        <div class="event-card-header">
                            <div class="event-card-title">${event.event_name || event.description}</div>
                            <div class="event-card-date">Event Date: ${formatDateDDMMYYYY(event.date)}</div>
                        </div>
                        <div class="event-card-body">
                            ${event.club ? `
                            <div class="event-info">
                                <strong>Club:</strong>
                                ${event.club}
                            </div>
                            ` : ''}
                            <div class="event-info">
                                <strong>Description:</strong>
                                ${event.description}
                            </div>
                            <div class="event-info">
                                <strong>Target Grades:</strong>
                                ${event.target_grades}
                            </div>
                            <div class="event-info">
                                <strong>Approval Status:</strong>
                                <span class="status-badge ${event.approved ? 'status-approved' : 'status-pending'}">
                                    ${event.approved ? 'Approved' : 'Pending'}
                                </span>
                            </div>
                            <div class="event-info">
                                <strong>Proposal:</strong>
                                <a href="${event.proposal_link}" target="_blank" class="link-button">View Document â†’</a>
                            </div>

                            ${event.approved ? `
                                <div class="submission-section">
                                    <div class="submission-title">Budget Submission</div>
                                    ${event.budget_submitted ? `
                                        <div style="background: #d1fae5; color: #065f46; padding: 10px; border-radius: 6px; font-size: 13px; margin-bottom: 12px;">
                                            âœ“ Budget previously submitted
                                        </div>
                                    ` : ''}
                                    <div class="file-upload">
                                        <label>${event.budget_submitted ? 'Upload Additional Budget File' : 'Upload Budget File'} (PDF, Excel, or Docs)</label>
                                        <input type="file" id="budget-file-${event.id}" accept=".pdf,.xlsx,.xls,.doc,.docx" />
                                    </div>
                                    <button class="submit-btn" onclick="submitBudget('${event.id}')">${event.budget_submitted ? 'Submit Additional Budget' : 'Submit Budget'}</button>
                                </div>

                                <div class="submission-section">
                                    <div class="submission-title">Receipt Submission</div>
                                    ${event.receipts_submitted ? `
                                        <div style="background: #d1fae5; color: #065f46; padding: 10px; border-radius: 6px; font-size: 13px; margin-bottom: 12px;">
                                            âœ“ Receipts previously submitted
                                        </div>
                                    ` : ''}
                                    <div class="file-upload">
                                        <label>${event.receipts_submitted ? 'Upload Additional Receipts' : 'Upload Receipts'} (PDF, Excel, or Docs)</label>
                                        <input type="file" id="receipts-file-${event.id}" accept=".pdf,.xlsx,.xls,.doc,.docx" multiple />
                                    </div>
                                    <button class="submit-btn" onclick="submitReceipts('${event.id}')">${event.receipts_submitted ? 'Submit Additional Receipts' : 'Submit Receipts'}</button>
                                </div>
                            ` : `
                                <div style="background: #fef3c7; color: #92400e; padding: 12px; border-radius: 6px; font-size: 13px; margin-top: 16px;">
                                    Waiting for admin approval before you can submit budget and receipts
                                </div>
                            `}
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading events:', error);
                container.innerHTML = `
                    <div style="grid-column: 1 / -1;">
                        <div class="error">Failed to load events. Please try again.</div>
                    </div>
                `;
            }
        }

        async function submitBudget(eventId) {
            const fileInput = document.getElementById(`budget-file-${eventId}`);
            const file = fileInput.files[0];

            if (!file) {
                alert('Please select a file');
                return;
            }

            const formData = new FormData();
            formData.append('file', file);

            try {
                const response = await fetch(`/events/${eventId}/budget`, {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Budget submitted successfully!');
                    loadEvents();
                } else {
                    alert(result.error || 'Failed to submit budget');
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }

        async function submitReceipts(eventId) {
            const fileInput = document.getElementById(`receipts-file-${eventId}`);
            const files = fileInput.files;

            if (files.length === 0) {
                alert('Please select at least one file');
                return;
            }

            const formData = new FormData();
            for (let file of files) {
                formData.append('files', file);
            }

            try {
                const response = await fetch(`/events/${eventId}/receipts`, {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Receipts submitted successfully!');
                    loadEvents();
                } else {
                    alert(result.error || 'Failed to submit receipts');
                }
