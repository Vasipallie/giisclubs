        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .animate-in {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Friendly refresh */
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --accent: #22c55e;
            --ink: #0f172a;
            --muted: #55617a;
            --surface: #ffffff;
            --surface-soft: #f3f6fb;
            --border: #e4e8f0;
            --shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
        }

        body {
            background-color: var(--surface-soft);
            color: var(--ink);
        }

        .header {
            background: rgba(255, 255, 255, 0.92);
            border-bottom: 1px solid var(--border);
            backdrop-filter: blur(12px);
        }

        .logo-text {
            color: var(--ink);
        }

        .nav-links a {
            color: var(--ink);
            font-weight: 600;
        }

        .nav-links a:hover {
            color: var(--primary);
            transform: translateY(-1px);
        }

        .nav-links a::after {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            height: 3px;
        }

        .cta-button, .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            box-shadow: var(--shadow);
            border-radius: 14px;
        }

        .cta-button:hover, .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 32px rgba(37, 99, 235, 0.28);
        }

        .btn-secondary {
            border-color: var(--primary);
            color: var(--primary);
            border-radius: 14px;
        }

        .btn-secondary:hover {
            background: var(--primary);
            color: white;
        }

        .hero-content-wrapper, .glass-panel {
            background: rgba(255, 255, 255, 0.86);
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
        }

        .hero-tagline {
            color: var(--ink);
        }

        .hero-subtitle, .hero-description {
            color: var(--muted);
        }

        .section-title {
            color: var(--ink);
        }

        .section-subtitle {
            color: var(--muted);
        }

        .card, .stat-item, .feature-card, .info-card, .panel {
            background: var(--surface);
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
            border-radius: 18px;
        }

        .card:hover, .feature-card:hover, .info-card:hover, .panel:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.14);
        }

        .card-description, .stat-label, .body-text, .form-helper {
            color: var(--muted);
        }

        .footer {
            background: #0f172a;
        }

        .footer a:hover {
            color: white;
        }

        /* Enhanced Form Elements */
        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="url"],
        textarea,
        select {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid var(--border);
            border-radius: 12px;
            font-family: inherit;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: var(--surface);
            color: var(--ink);
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus,
        input[type="url"]:focus,
        textarea:focus,
        select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
            background-color: var(--surface);
        }

        textarea {
            resize: vertical;
            min-height: 120px;
            line-height: 1.5;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--ink);
            font-size: 15px;
        }

        .form-group {
            margin-bottom: 22px;
        }

        /* Button Enhancements */
        button,
        [type="button"],
        [type="submit"],
        [type="reset"] {
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: none;
            border-radius: 12px;
            font-size: 15px;
            padding: 14px 24px;
        }

        button:active {
            transform: scale(0.98);
        }

        /* Link Styling */
        a {
            color: var(--primary);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        a:hover {
            color: var(--primary-dark);
        }

        /* Section Spacing */
        .content-section {
            padding: 80px 30px;
        }

        /* Improved Typography */
        h1, h2, h3, h4, h5, h6 {
            font-weight: 700;
            line-height: 1.2;
            letter-spacing: -0.5px;
        }

        p {
            line-height: 1.7;
        }
        /* Disable hover animations */
        *, *::before, *::after {
            transition: none !important;
            animation: none !important;
        }

        *:hover {
            transform: none !important;
            box-shadow: none !important;
            filter: none !important;
        }
    </style>
</head>
