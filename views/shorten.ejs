                    <form id="create-form">
                        <div class="form-group">
                            <label for="link">Destination URL</label>
                            <input type="url" id="link" name="link" placeholder="https://example.com" required>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-control">
                                <label for="customId">Custom Short ID (optional)</label>
                                <input type="text" id="customId" name="customId" class="custom-id-input" placeholder="my-link" pattern="[a-zA-Z0-9-_]+">
                                <div class="url-preview">https://giisclubs.org/<span id="preview-id">random-id</span></div>
                            </div>
                            <button type="submit" class="btn">Create Link</button>
                        </div>
                    </form>
                </div>
                
                <div class="links-section">
                    <h2 class="section-title">
                        <span>📋</span>
                        Your Short Links
                    </h2>
                    
                    <div class="links-grid" id="links-container">
                        <% if (links && links.length > 0) { %>
                            <% links.forEach(link => { %>
                                <div class="link-card" data-id="<%= link.id %>">
                                    <div class="link-header">
                                        <div class="short-url">giisclubs.org/<%= link.id %></div>
                                        <div class="link-actions">
                                            <button class="copy-btn" onclick="copyToClipboard('https://giisclubs.org/<%= link.id %>', this)">Copy</button>
                                            <button class="btn btn-sm btn-secondary" onclick="editLink('<%= link.id %>', '<%= link.link %>')">Edit</button>
                                            <button class="btn btn-sm btn-danger" onclick="deleteLink('<%= link.id %>')">Delete</button>
                                        </div>
                                    </div>
                                    <div class="destination-url"><%= link.link %></div>
                                    <div class="link-stats">
                                        <span>👥 <%= link.visits || 0 %> visits</span>
                                        <span>📅 <%= new Date(link.created_at).toLocaleDateString() %></span>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="empty-state">
                                <div class="empty-icon">🔗</div>
                                <h3>No links yet</h3>
                                <p>Create your first short link above to get started!</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="edit-modal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Edit Link</h3>
                </div>
                <form id="edit-form">
                    <div class="form-group">
                        <label for="edit-link">Destination URL</label>
                        <input type="url" id="edit-link" name="link" required>
                    </div>
                    <div class="modal-actions">
                        <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                        <button type="submit" class="btn">Update Link</button>
                    </div>
                </form>
            </div>
        </div>
    </main>


