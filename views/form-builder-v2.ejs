                            <option value="pattern" ${formData.settings.bgType === 'pattern' ? 'selected' : ''}>Pattern</option>
                        </select>
                    </div>
                </div>
            `;
            
            // Setup color swatches
            body.querySelectorAll('.color-swatch').forEach(s => s.addEventListener('click', function() {
                body.querySelectorAll('.color-swatch').forEach(x => x.classList.remove('selected'));
                this.classList.add('selected');
                updatePrimaryColor(this.dataset.color);
            }));
            
            document.getElementById('designModal').classList.add('show');
        }
        
        function closeDesignModal() {
            document.getElementById('designModal').classList.remove('show');
        }
        
        // ===== SETTINGS MODAL =====
        function showSettingsModal() {
            const body = document.getElementById('settingsModalBody');
            body.innerHTML = `
                <div class="prop-section">
                    <div class="prop-section-title">Form Behavior</div>
                    <div class="prop-toggle-row">
                        <span class="prop-toggle-label">Show progress bar</span>
                        <label class="toggle-switch"><input type="checkbox" ${formData.settings.showProgress !== false ? 'checked' : ''} onchange="formData.settings.showProgress = this.checked; triggerAutosave();"><span class="toggle-slider"></span></label>
                    </div>
                    <div class="prop-toggle-row">
                        <span class="prop-toggle-label">Limit to one response per user</span>
                        <label class="toggle-switch"><input type="checkbox" ${formData.settings.limitResponses ? 'checked' : ''} onchange="formData.settings.limitResponses = this.checked; triggerAutosave();"><span class="toggle-slider"></span></label>
                    </div>
                    <div class="prop-toggle-row">
                        <span class="prop-toggle-label">Shuffle questions randomly</span>
                        <label class="toggle-switch"><input type="checkbox" ${formData.settings.shuffleQuestions ? 'checked' : ''} onchange="formData.settings.shuffleQuestions = this.checked; triggerAutosave();"><span class="toggle-slider"></span></label>
                    </div>
                    <div class="prop-toggle-row">
                        <span class="prop-toggle-label">Show question numbers</span>
                        <label class="toggle-switch"><input type="checkbox" ${formData.settings.showNumbers !== false ? 'checked' : ''} onchange="formData.settings.showNumbers = this.checked; triggerAutosave();"><span class="toggle-slider"></span></label>
                    </div>
                </div>
                <div class="prop-section">
                    <div class="prop-section-title">Submission</div>
                    <div class="prop-group">
                        <label class="prop-label">Submit Button Text</label>
                        <input type="text" class="prop-input" value="${formData.settings.submitText || 'Submit'}" onchange="formData.settings.submitText = this.value; triggerAutosave();">
                    </div>
                    <div class="prop-group">
                        <label class="prop-label">Success Message</label>
                        <textarea class="prop-input" rows="3" onchange="formData.settings.successMessage = this.value; triggerAutosave();">${formData.settings.successMessage || 'Thank you for your response! ðŸŽ‰'}</textarea>
                    </div>
                    <div class="prop-group">
                        <label class="prop-label">Redirect URL (optional)</label>
                        <input type="url" class="prop-input" value="${formData.settings.redirectUrl || ''}" placeholder="https://example.com/thank-you" onchange="formData.settings.redirectUrl = this.value; triggerAutosave();">
                    </div>
                </div>
                <div class="prop-section">
                    <div class="prop-section-title">Notifications</div>
                    <div class="prop-toggle-row">
                        <span class="prop-toggle-label">Email notifications on submission</span>
                        <label class="toggle-switch"><input type="checkbox" ${formData.settings.emailNotifications ? 'checked' : ''} onchange="formData.settings.emailNotifications = this.checked; triggerAutosave();"><span class="toggle-slider"></span></label>
                    </div>
                </div>
            `;
            document.getElementById('settingsModal').classList.add('show');
        }
        
        function closeSettingsModal() {
            document.getElementById('settingsModal').classList.remove('show');
        }
        
        // ===== RESPONSES MODAL =====
        let responsesData = [];
        
        async function loadResponses() {
            if (!formId) return;
            try {
                const res = await fetch('/forms/' + formId + '/responses');
                const data = await res.json();
                if (data.success) {
                    responsesData = data.responses || [];
                    document.getElementById('responsesCount').textContent = responsesData.length;
                }
            } catch(e) {
                console.error('Error loading responses:', e);
            }
        }
        
        function showResponsesModal() {
            const body = document.getElementById('responsesModalBody');
            
            if (!formId) {
                body.innerHTML = `
                    <div class="responses-empty">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                        <h3 style="font-size:16px;font-weight:600;margin-bottom:8px;">Publish your form first</h3>
                        <p style="font-size:13px;">You need to publish your form before you can see responses.</p>
                    </div>
                `;
            } else if (responsesData.length === 0) {
                body.innerHTML = `
                    <div class="responses-empty">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                        <h3 style="font-size:16px;font-weight:600;margin-bottom:8px;">No responses yet</h3>
                        <p style="font-size:13px;">Share your form to start collecting responses.</p>
                        <button class="btn btn-primary" onclick="showShareModal(); closeResponsesModal();" style="margin-top:16px;">Share Form</button>
                    </div>
                `;
            } else {
                // Get all unique field labels for headers
                const headers = formData.fields.filter(f => !fieldTypes[f.type]?.isLayout).map(f => f.label || 'Untitled');
                
                let tableHtml = `
                    <div style="overflow-x:auto;">
                        <table class="responses-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Submitted</th>
                                    ${headers.map(h => `<th>${h}</th>`).join('')}
                                </tr>
                            </thead>
                            <tbody>
                `;
                
                responsesData.forEach((response, i) => {
                    tableHtml += `<tr><td>${i + 1}</td><td>${new Date(response.submittedAt).toLocaleString()}</td>`;
                    formData.fields.filter(f => !fieldTypes[f.type]?.isLayout).forEach(field => {
                        const value = response.data?.[field.id] || '-';
                        tableHtml += `<td title="${Array.isArray(value) ? value.join(', ') : value}">${Array.isArray(value) ? value.join(', ') : value}</td>`;
                    });
                    tableHtml += '</tr>';
                });
                
                tableHtml += '</tbody></table></div>';
                body.innerHTML = tableHtml;
            }
            
            document.getElementById('responsesSubtitle').textContent = `${responsesData.length} response${responsesData.length !== 1 ? 's' : ''}`;
            document.getElementById('responsesModal').classList.add('show');
        }
        
        function closeResponsesModal() {
            document.getElementById('responsesModal').classList.remove('show');
        }
        
        function exportResponses() {
            if (responsesData.length === 0) {
                showToast('No responses to export', 'error');
                return;
            }
            
            // Build CSV
            const headers = ['#', 'Submitted', ...formData.fields.filter(f => !fieldTypes[f.type]?.isLayout).map(f => f.label || 'Untitled')];
            let csv = headers.join(',') + '\n';
            
            responsesData.forEach((response, i) => {
                const row = [i + 1, new Date(response.submittedAt).toISOString()];
                formData.fields.filter(f => !fieldTypes[f.type]?.isLayout).forEach(field => {
                    let value = response.data?.[field.id] || '';
                    if (Array.isArray(value)) value = value.join('; ');
                    // Escape CSV
                    value = String(value).replace(/"/g, '""');
                    if (value.includes(',') || value.includes('"') || value.includes('\n')) {
                        value = '"' + value + '"';
                    }
                    row.push(value);
                });
                csv += row.join(',') + '\n';
            });
            
            // Download
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = (formData.title || 'form') + '-responses.csv';
            a.click();
            URL.revokeObjectURL(url);
            
            showToast('Responses exported! ðŸ“¥');
        }

