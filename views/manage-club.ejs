            <div class="alert alert-error">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
                <%= error %>
            </div>
        <% } %>

        <form action="/manage-club" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="current_club" value="<%= club?.name || '' %>">

            <!-- Club Description Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">
                        <svg viewBox="0 0 24 24"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/></svg>
                    </div>
                    <div class="card-header-text">
                        <h2>Club Description</h2>
                        <p>Tell visitors what your club is about</p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-textarea" id="description" name="description" placeholder="Share what makes your club unique, your activities, mission, and what members can expect..." required><%= club?.description || '' %></textarea>
                        <p class="form-hint">This appears on your Explore card and Linklist profile</p>
                    </div>
                </div>
            </div>

            <!-- Explore Link Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">
                        <svg viewBox="0 0 24 24"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
                    </div>
                    <div class="card-header-text">
                        <h2>Explore Page Link</h2>
                        <p>Add a button to your Explore card</p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" for="link_text">Button Text</label>
                            <input class="form-input" type="text" id="link_text" name="link_text" value="<%= club?.link_text || '' %>" placeholder="e.g., Visit Instagram, Join Discord">
                            <p class="form-hint">Keep it short and actionable</p>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="link">Button URL</label>
                            <input class="form-input" type="url" id="link" name="link" value="<%= club?.link || '' %>" placeholder="https://...">
                            <p class="form-hint">Where should the button link to?</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Branding Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">
                        <svg viewBox="0 0 24 24"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
                    </div>
                    <div class="card-header-text">
                        <h2>Club Images</h2>
                        <p>Upload your club banner and logo</p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Club Banner</label>
                            <% if (club?.banner) { %>
                                <div class="current-preview">
                                    <img src="<%= club.banner %>" alt="Current banner">
                                    <div class="current-preview-text">
                                        <strong>Current Banner</strong>
                                        Upload a new image to replace
                                    </div>
                                </div>
                            <% } %>
                            <label class="upload-area" for="banner_upload">
                                <input type="file" id="banner_upload" name="banner_upload" accept="image/*" onchange="previewImage(this, 'banner-preview')">
                                <div class="upload-icon">
                                    <svg viewBox="0 0 24 24"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                                </div>
                                <p class="upload-text"><span>Click to upload</span> or drag and drop</p>
                                <p class="upload-hint">PNG, JPG up to 5MB - Displays on Explore cards</p>
                            </label>
                            <div class="upload-preview" id="banner-preview"></div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Profile Logo</label>
                            <% if (club?.logo) { %>
                                <div class="current-preview">
                                    <img src="<%= club.logo %>" alt="Current logo">
                                    <div class="current-preview-text">
                                        <strong>Current Logo</strong>
                                        Upload a new image to replace
                                    </div>
                                </div>
                            <% } %>
                            <label class="upload-area" for="logo_p_upload">
                                <input type="file" id="logo_p_upload" name="logo_p_upload" accept="image/*" onchange="previewImage(this, 'logo-preview')">
                                <div class="upload-icon">
                                    <svg viewBox="0 0 24 24"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
                                </div>
                                <p class="upload-text"><span>Click to upload</span> or drag and drop</p>
                                <p class="upload-hint">PNG, JPG up to 5MB - Displays on Linklist & sidebar</p>
                            </label>
                            <div class="upload-preview" id="logo-preview"></div>
                        </div>
                    </div>
                </div>
                <div class="submit-section">
                    <p class="submit-hint">Changes will be visible immediately after saving</p>
                    <button type="submit" class="btn-submit">Save Changes</button>
                </div>
            </div>
        </form>

        <!-- Subdomain Card -->
        <form action="/add-subdomain" method="POST" style="margin-top:18px;">
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">
                        <svg viewBox="0 0 24 24"><path d="M3 5h18v14H3z"></path></svg>
                    </div>
                    <div class="card-header-text">
                        <h2>Club Subdomain</h2>
                        <p>Reserve a subdomain on giisclubs.org for your club</p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" for="subdomain">Subdomain</label>
                            <div style="display:flex;gap:8px;align-items:center;">
                                <input class="form-input" type="text" id="subdomain" name="subdomain" placeholder="e.g., robotics" pattern="[a-z0-9-]{3,63}" required style="flex:1;" />
                                <div style="color:var(--muted);font-size:14px;">.giisclubs.org</div>
                            </div>
                            <p class="form-hint">Lowercase letters, numbers and hyphens only. 3-63 characters.</p>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="target">Target (IP or hostname)</label>
                            <input class="form-input" type="text" id="target" name="target" placeholder="e.g., giisclubs.org or 76.76.21.21" style="flex:1;" />
                            <p class="form-hint">Enter a hostname (CNAME) or IP (A/AAAA) for your record.</p>
                        </div>
                    </div>
                </div>
                <div class="submit-section">
                    <p class="submit-hint">If Cloudflare integration is enabled, DNS will be updated automatically.</p>
                    <button type="submit" class="btn-submit">Reserve Subdomain</button>
                </div>
            </div>
        </form>
    </main>

    <script>
        function previewImage(input, previewId) {
            const preview = document.getElementById(previewId);
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = '<img src="' + e.target.result + '" alt="Preview">';
                    preview.classList.add('active');
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Mobile sidebar toggle
        const mobileToggle = document.getElementById('mobile-toggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebar-overlay');

        mobileToggle.addEventListener('click', () => {
            sidebar.classList.toggle('open');
            sidebarOverlay.classList.toggle('open');
        });

        sidebarOverlay.addEventListener('click', () => {
            sidebar.classList.remove('open');
            sidebarOverlay.classList.remove('open');
        });

        // Close sidebar when a link is clicked
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 768) {
                    sidebar.classList.remove('open');
                    sidebarOverlay.classList.remove('open');
                }
            });
        });
    </script>
            </div>
        </div>
    </main>
</body>
