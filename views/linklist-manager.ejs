<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GIIS Clubs. | Link Manager</title>
    <style>
        @font-face {
            font-family: 'Garet';
            src: url('fonts/GaretR.otf') format('opentype');
            font-weight: 400;
            font-style: normal;
        }

        @font-face {
            font-family: 'Garet';
            src: url('fonts/GaretH.otf') format('opentype');
            font-weight: 700;
            font-style: normal;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Garet', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f5f7fb;
            color: #111827;
        }

        .topbar {
            background: #ffffff;
            box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 14px 24px;
            gap: 16px;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logo {
            height: 52px;
            width: auto;
        }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 28px;
            list-style: none;
        }

        .nav-links a {
            color: #1f2937;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
        }

        .nav-actions {
            display: flex;
            gap: 10px;
        }

        .cta-button {
            background: linear-gradient(135deg, #1a237e 0%, #3f51b5 100%);
            color: white;
            padding: 10px 20px;
            border-radius: 999px;
            text-decoration: none;
            font-weight: 600;
            font-size: 13px;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(26, 35, 126, 0.25);
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 32px 24px 80px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            padding: 22px 24px;
            background: #ffffff;
            border-radius: 16px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
        }

        .header h1 {
            font-size: 28px;
            margin-bottom: 6px;
            color: #111827;
        }

        .header-subtitle {
            color: #6b7280;
            font-size: 14px;
        }

        .header-buttons {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 10px 18px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-size: 13px;
            font-weight: 600;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: #1a237e;
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 24px rgba(26, 35, 126, 0.25);
        }

        .btn-secondary {
            background: #eef2f7;
            color: #1f2937;
            border: 1px solid #e5e7eb;
        }

        .btn-secondary:hover {
            background: #e5e7eb;
        }

        .btn-danger {
            background: #ef4444;
            color: white;
            padding: 8px 12px;
            font-size: 12px;
        }

        .btn-danger:hover {
            background: #dc2626;
        }

        .btn-edit {
            background: #2563eb;
            color: white;
            padding: 8px 12px;
            font-size: 12px;
        }

        .btn-edit:hover {
            background: #1d4ed8;
        }

        .form-section {
            background: #ffffff;
            padding: 24px;
            border-radius: 16px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
            margin-bottom: 24px;
        }

        .form-section h2 {
            font-size: 18px;
            margin-bottom: 16px;
            color: #111827;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #111827;
            font-size: 13px;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 12px 14px;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            font-size: 14px;
            font-family: inherit;
            transition: border-color 0.2s, box-shadow 0.2s;
            background: #ffffff;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #1a237e;
            box-shadow: 0 0 0 3px rgba(26, 35, 126, 0.12);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .links-list {
            background: #ffffff;
            padding: 24px;
            border-radius: 16px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
        }

        .links-list h2 {
            font-size: 18px;
            margin-bottom: 16px;
            color: #111827;
        }

        .link-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            background: #f8fafc;
            border-radius: 12px;
            margin-bottom: 12px;
            border: 1px solid #e5e7eb;
            border-left: 4px solid #1a237e;
            cursor: grab;
            gap: 12px;
        }

        .link-item:active {
            cursor: grabbing;
        }

        .drag-handle {
            color: #9ca3af;
            font-weight: bold;
            font-size: 18px;
            user-select: none;
            flex-shrink: 0;
        }

        .link-info {
            flex: 1;
            min-width: 0;
        }

        .link-headline {
            font-weight: 600;
            font-size: 15px;
            color: #111827;
            margin-bottom: 6px;
        }

        .link-url {
            font-size: 13px;
            color: #6b7280;
            word-break: break-all;
        }

        .link-actions {
            display: flex;
            gap: 8px;
            flex-shrink: 0;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 2000;
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background: #ffffff;
            border-radius: 16px;
            padding: 24px;
            max-width: 500px;
            width: 90%;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .modal-header h3 {
            font-size: 20px;
            color: #111827;
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 28px;
            color: #6b7280;
            cursor: pointer;
            padding: 0;
            width: 32px;
            height: 32px;
        }

        .modal-actions {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
            margin-top: 20px;
        }

        .no-links-message {
            text-align: center;
            padding: 40px 20px;
            color: #999;
        }

        .message {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .message.success {
            background: #d1fae5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }

        .message.error {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .linktree-link {
            text-align: center;
            padding: 12px 18px;
            background: #1a237e;
            color: white;
            border-radius: 12px;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 20px;
            font-weight: 600;
            transition: all 0.2s;
        }

        .linktree-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 24px rgba(26, 35, 126, 0.25);
        }

        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .header {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .link-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .link-actions {
                width: 100%;
                margin-top: 10px;
            }
        }

        .loading {
            display: none;
            text-align: center;
            padding: 20px;
        }

        .loading.show {
            display: block;
        }
        /* Disable hover animations */
        *, *::before, *::after {
            transition: none !important;
            animation: none !important;
        }

        *:hover {
            transform: none !important;
            box-shadow: none !important;
            filter: none !important;
        }
    </style>
</head>
<body>
    <header class="topbar">
        <div class="nav-container">
            <a href="/home" class="logo-section">
                <img src="resources/2.png" alt="GIIS Clubs" class="logo">
            </a>
            <nav>
                <ul class="nav-links">
                    <li><a href="/home">Dashboard</a></li>
                    <li><a href="/linklist-manager">Linktree Manager</a></li>
                    <li><a href="/shorten">Shorten Links</a></li>
                    <li><a href="/qrcode">QR Generator</a></li>
                </ul>
            </nav>
            <div class="nav-actions">
                <a href="/home" class="cta-button">Back to Dashboard</a>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="header">
            <div>
                <h1>Link Manager</h1>
                <div class="header-subtitle">Manage your club's linktree</div>
            </div>
            <div class="header-buttons">
                <a href="/home" class="btn btn-secondary">‚Üê Back</a>
                <a href="/linktree/<%= clubName %>" class="btn btn-primary" target="_blank">View Linktree</a>
            </div>
        </div>

        <div id="messageContainer"></div>

        <div class="form-section">
            <h2>Add New Link</h2>
            <form id="addLinkForm">
                <div class="form-group">
                    <label for="headline">Link Headline *</label>
                    <input type="text" id="headline" name="headline" placeholder="e.g., Follow Us on Instagram" required>
                </div>
                <div class="form-group">
                    <label for="url">URL *</label>
                    <input type="url" id="url" name="url" placeholder="https://example.com" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Link</button>
                <div class="loading" id="addLoading">Adding link...</div>
            </form>
        </div>

        <div class="links-list">
            <h2>Your Links (<span id="linkCount">0</span>)</h2>
            <div id="linksList" class="sortable-list"></div>
        </div>
    </div>

    <!-- Edit Link Modal -->
    <div id="editModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Link</h3>
                <button class="modal-close" onclick="closeEditModal()">&times;</button>
            </div>
            <form id="editForm">
                <div class="form-group">
                    <label for="editHeadline">Headline *</label>
                    <input type="text" id="editHeadline" required>
                </div>
                <div class="form-group">
                    <label for="editUrl">URL *</label>
                    <input type="url" id="editUrl" required>
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const clubName = '<%= clubName %>';
        let currentEditingLinkId = null;
        let draggedElement = null;

        // Load links on page load
        document.addEventListener('DOMContentLoaded', loadLinks);

        // Add link form submission
        document.getElementById('addLinkForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const headline = document.getElementById('headline').value.trim();
            const url = document.getElementById('url').value.trim();

            if (!headline || !url) {
                showMessage('Please fill in all fields', 'error');
                return;
            }

            const loading = document.getElementById('addLoading');
            loading.classList.add('show');

            try {
                const response = await fetch('/linklist/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        headline,
                        url,
                        club: clubName
                    })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to add link');
                }

                showMessage('Link added successfully!', 'success');
                document.getElementById('addLinkForm').reset();
                loadLinks();
            } catch (error) {
                console.error('Error:', error);
                showMessage(error.message, 'error');
            } finally {
                loading.classList.remove('show');
            }
        });

        async function loadLinks() {
            try {
                const response = await fetch(`/linklist/${clubName}`);
                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to load links');
                }

                const links = data.links || [];
                const linksList = document.getElementById('linksList');
                const linkCount = document.getElementById('linkCount');

                linkCount.textContent = links.length;

                if (links.length === 0) {
                    linksList.innerHTML = '<div class="no-links-message">No links added yet. Create your first link above!</div>';
                    return;
                }

                linksList.innerHTML = links.map(link => `
                    <div class="link-item" draggable="true" data-id="${link.id}">
                        <div class="drag-handle">::</div>
                        <div class="link-info">
                            <div class="link-headline">${escapeHtml(link.headline)}</div>
                            <div class="link-url">${escapeHtml(link.url)}</div>
                        </div>
                        <div class="link-actions">
                            <button class="btn btn-edit" onclick="openEditModal('${link.id}', '${escapeHtml(link.headline).replace(/'/g, "\\'")}', '${escapeHtml(link.url).replace(/'/g, "\\'")}')">Edit</button>
                            <button class="btn btn-danger" onclick="deleteLink('${link.id}')">Delete</button>
                        </div>
                    </div>
                `).join('');

                // Add drag-and-drop listeners
                setupDragAndDrop();
            } catch (error) {
                console.error('Error loading links:', error);
                document.getElementById('linksList').innerHTML = '<div class="no-links-message">Failed to load links</div>';
            }
        }

        function setupDragAndDrop() {
            const items = document.querySelectorAll('.link-item');
            
            items.forEach(item => {
                item.addEventListener('dragstart', handleDragStart);
                item.addEventListener('dragend', handleDragEnd);
                item.addEventListener('dragover', handleDragOver);
                item.addEventListener('drop', handleDrop);
            });
        }

        function handleDragStart(e) {
            draggedElement = this;
            this.style.opacity = '0.5';
            e.dataTransfer.effectAllowed = 'move';
        }

        function handleDragEnd(e) {
            this.style.opacity = '1';
            draggedElement = null;
        }

        function handleDragOver(e) {
            if (e.preventDefault) {
                e.preventDefault();
            }
            e.dataTransfer.dropEffect = 'move';
            return false;
        }

        function handleDrop(e) {
            if (e.stopPropagation) {
                e.stopPropagation();
            }

            if (draggedElement !== this) {
                const list = document.getElementById('linksList');
                const items = Array.from(list.children);
                const draggedIndex = items.indexOf(draggedElement);
                const targetIndex = items.indexOf(this);

                if (draggedIndex < targetIndex) {
                    this.parentNode.insertBefore(draggedElement, this.nextSibling);
                } else {
                    this.parentNode.insertBefore(draggedElement, this);
                }

                saveOrder();
            }

            return false;
        }

        async function saveOrder() {
            const items = document.querySelectorAll('.link-item');
            const links = Array.from(items).map((item, index) => ({
                id: item.dataset.id,
                order: index
            }));

            try {
                const response = await fetch('/linklist/reorder', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ links })
                });

                if (!response.ok) {
                    throw new Error('Failed to save order');
                }

                showMessage('Order saved!', 'success');
            } catch (error) {
                console.error('Error:', error);
                showMessage('Failed to save order', 'error');
                loadLinks();
            }
        }

        function openEditModal(linkId, headline, url) {
            currentEditingLinkId = linkId;
            document.getElementById('editHeadline').value = headline;
            document.getElementById('editUrl').value = url;
            document.getElementById('editModal').style.display = 'flex';
        }

        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
            currentEditingLinkId = null;
        }

        document.getElementById('editForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const headline = document.getElementById('editHeadline').value.trim();
            const url = document.getElementById('editUrl').value.trim();

            if (!headline || !url) {
                showMessage('Please fill in all fields', 'error');
                return;
            }

            try {
                const response = await fetch(`/linklist/${currentEditingLinkId}/edit`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ headline, url })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to update link');
                }

                showMessage('Link updated successfully!', 'success');
                closeEditModal();
                loadLinks();
            } catch (error) {
                console.error('Error:', error);
                showMessage(error.message, 'error');
            }
        });

        async function deleteLink(linkId) {
            if (!confirm('Are you sure you want to delete this link?')) return;

            try {
                const response = await fetch(`/linklist/${linkId}`, {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.error || 'Failed to delete link');
                }

                showMessage('Link deleted successfully!', 'success');
                loadLinks();
            } catch (error) {
                console.error('Error:', error);
                showMessage(error.message, 'error');
            }
        }

        function showMessage(message, type) {
            const container = document.getElementById('messageContainer');
            const messageEl = document.createElement('div');
            messageEl.className = `message ${type}`;
            messageEl.textContent = message;
            container.innerHTML = '';
            container.appendChild(messageEl);

            setTimeout(() => {
                messageEl.remove();
            }, 5000);
        }

        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        }
    </script>
</body>
</html>
